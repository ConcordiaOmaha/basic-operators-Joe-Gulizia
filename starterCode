

// Final Program
#include <iostream>
#include <string>

int main()
{

//Declares First Number
int num1 = 0;
//Declares Second Number
int num2 = 0;

//Asks for the numbers and takes them in
std::cout << "Enter your first number ";
std::cin >> num1;
std::cout << "Enter your second number ";
std::cin >> num2;

//Add the two numbers
std::cout << " \n-When Added " << num1 + num2;

//Subtract the two numbers
std::cout << " \n-When Subtracted " << num1 - num2;

//Multiply the two number
std::cout << " \n-When Multiplied " << num1 * num2;

//Divide the two numbers
std::cout << " \n-When Divided " << num1 / num2;

//Find the remainder of the two numbers' division using modulus (%)
std::cout << " \n-Remainder After Division " << num1 % num2;




}
